@model fitotrack.Models.Account.RegisterViewModel

<div id="register-pane">
    @{
        var modelErrors = ViewData.ModelState.SelectMany(keyValuePair => keyValuePair.Value.Errors);
        if (modelErrors.Count() > 0)
        {
            <div class="alert alert-danger" role="alert">
                <ul>
                    @foreach (var error in modelErrors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
    }
    
    @using (Html.BeginForm(
        "Register",
        "Account",
        new { ReturnUrl = ViewBag.ReturnUrl },
        FormMethod.Post,
        new { @name = "register-form", @role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control cFullname required", @placeholder = "Full Name" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @type = "email", @class = "form-control cEmail required", @placeholder = "Email" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @type = "password", @class = "form-control cPassword required", @placeholder = "Password" })
        </div>
        <button type="submit" class="btn btn-lg btn-primary btn-block">Register</button>

        <span>By clicking the "Register" button above, you agree to the Fitotrack <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.</span>
    }
</div> <!--/register-pane-->
