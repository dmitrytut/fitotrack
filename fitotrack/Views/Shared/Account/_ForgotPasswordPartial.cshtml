<div id="forgot-box" class="forgot-box widget-box no-border visible">
	<div class="widget-body">
		<div class="widget-main">
			<h4 class="header red lighter bigger">
				<i class="icon-key"></i>
				Retrieve Password
			</h4>

			<div class="space-6"></div>
			<p>
				Enter your email and to receive instructions
			</p>

			<form>
				<fieldset>
					<label class="block clearfix">
						<span class="block input-icon input-icon-right">
							<input type="email" class="form-control" placeholder="Email" />
							<i class="icon-envelope"></i>
						</span>
					</label>

					<div class="clearfix">
						<button onclick="return false;" class="width-35 pull-right btn btn-sm btn-danger">
							<i class="icon-lightbulb"></i>
							@SharedRes.SharedStrings.SEND_PWD_STR
						</button>
					</div>
				</fieldset>
			</form>
		</div><!--/widget-main-->

		<div class="toolbar center">
			<a href="~/Account/Login" class="back-to-login-link">
				@SharedRes.SharedStrings.BACK_TO_LOGIN_STR
				<i class="icon-arrow-right"></i>
			</a>
		</div>
	</div><!--/widget-body-->
</div><!--/forgot-box-->